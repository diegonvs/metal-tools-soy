{
  "private": true,
  "scripts": {
    "compile": "lerna run compile",
    "coveralls": "node node_modules/coveralls/bin/coveralls.js < coverage/lcov.info",
    "lerna": "lerna bootstrap -- --no-optional --no-package-lock",
    "lint": "eslint 'src/**/*.(ts|js)'",
    "prettier-all": "npm run prettier -- --write",
    "prettier-ci": "npm run prettier -- --list-different",
    "prettier": "prettier-eslint 'src/**/*.(ts|js)'",
    "test": "jest && cd packages/gulp-soynode && gulp test",
    "typescript-ci": "lerna run typescript-ci"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "coveralls": "^3.0.0",
    "eslint": "4.18.2",
    "eslint-config-liferay": "^2.0.18",
    "jest": "^23.4.2",
    "jest-junit": "^5.1.0",
    "lerna": "^3.1.4",
    "metal-jest-serializer": "^2.0.0",
    "prettier": "^1.14.2",
    "prettier-eslint-cli": "^4.7.1",
    "ts-jest": "^23.1.3",
    "typescript-eslint-parser": "^18.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "snapshotSerializers": [
      "metal-jest-serializer"
    ],
    "testMatch": [
      "**/__tests__/*.(ts|js)"
    ],
    "coveragePathIgnorePatterns": [
      "tmp"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    }
  },
  "jest-junit": {
    "output": "./test-report.xml"
  },
  "workspaces": [
    "packages/*"
  ]
}
