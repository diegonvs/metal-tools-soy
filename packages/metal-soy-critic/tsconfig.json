{
    "compilerOptions": {
        "outDir": "./lib",
        "allowJs": true,
        "target": "es6",
        "lib": ["es2016"],
        "moduleResolution": "node",
        "module": "commonjs",
        "strictNullChecks": true,
        "noUnusedLocals": true
    },
    "include": [
        "./src/*.ts"
    ],
    "exclude": [
        "**/__tests__/*"
    ]
}
